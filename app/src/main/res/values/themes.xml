<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MobilePOSe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.MobilePOSe" parent="Base.Theme.MobilePOSe" />

    <style name="Theme.MobilePOSe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MobilePOSe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MobilePOSe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowMinWidthMajor">50%</item>
        <item name="android:windowAnimationStyle">@style/dialogAnim</item>
    </style>

    <style name="dialogAnim">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_in_right</item>
    </style>


</resources>